{% block title 'TOUS NOS ARTICLES' %}

{% block body %}
    <div class="container mt-4">
        <h1>Voir tous nos articles</h1>

        <div class="row">
            {% for article in articles %}
                <div class="col-md-4">
                    {%  include('article/_article.html.twig') %}
                </div>
            {% endfor %}

        </div>

        <div class="navigation">
            {{ knp_pagination_render(articles) }}
        </div>


    </div>


{% endblock %}